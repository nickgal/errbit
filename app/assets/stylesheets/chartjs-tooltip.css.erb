#chartjs-tooltip {
  background: rgba(0, 0, 0, .7);
  border-radius: 3px;
  color: white;
  max-width: 225px;
  opacity: 1;
  pointer-events: none;
  position: absolute;
  transition: all .1s ease;
  -webkit-transition: all .1s ease;
  /*transform: translate(-50%, 0);*/
  /*-webkit-transform: translate(-50%, 0); */
}
.chartjs-tooltip-key {
  display: inline-block;
  width: 10px;
  height: 10px;
}
